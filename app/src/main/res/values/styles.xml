<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/edit_button_background</item>
    </style>

    <style name="CustomAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="colorPrimary">@color/on_primary</item>
        <item name="colorOnSurface">@color/on_primary</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/black</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialogBody</item>
    </style>

    <style name="CustomAlertDialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/grey</item>
    </style>


</resources>