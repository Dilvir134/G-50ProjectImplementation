<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Client Name -->
        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Client Location -->
        <TextView
            android:id="@+id/clientLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Location"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Client Contact -->
        <TextView
            android:id="@+id/clientContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Client Contact Number -->
        <TextView
            android:id="@+id/clientContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Placeholder for Jobs -->
        <TextView
            android:id="@+id/upcomingJobsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Jobs:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Job Container -->
        <LinearLayout
            android:id="@+id/jobsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
